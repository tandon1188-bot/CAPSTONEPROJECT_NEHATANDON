{
  "info": {
    "name": "Books Service",
    "_postman_id": "books-service-collection",
    "description": "Postman collection for Books Service (CRUD, categories, stock update)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Book",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer admin_token",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Clean Code\",\n  \"author\": \"Robert C. Martin\",\n  \"isbn\": \"978-0132350884\",\n  \"description\": \"A handbook of agile software craftsmanship\",\n  \"price\": 42.99,\n  \"stock_quantity\": 50,\n  \"category\": \"Programming\",\n  \"publisher\": \"Prentice Hall\",\n  \"published_date\": \"2008-08-01\"\n}"
        },
        "url": {
          "raw": "http://localhost:8002/api/v1/books",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books"]
        }
      },
      "response": []
    },
    {
      "name": "List Books",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8002/api/v1/books?page=1&limit=20",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "limit", "value": "20" }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Book by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8002/api/v1/books/{{book_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books", "{{book_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Update Book",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer admin_token",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 39.99,\n  \"stock_quantity\": 75,\n  \"description\": \"Updated description\"\n}"
        },
        "url": {
          "raw": "http://localhost:8002/api/v1/books/{{book_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books", "{{book_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Book",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer admin_token",
            "type": "text"
          }
        ],
        "url": {
          "raw": "http://localhost:8002/api/v1/books/{{book_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books", "{{book_id}}"]
        }
      },
      "response": []
    },
    {
      "name": "Get Categories",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8002/api/v1/books/categories",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books", "categories"]
        }
      },
      "response": []
    },
    {
      "name": "Update Stock",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "X-Internal-Secret",
            "value": "internal_secret",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity_change\": -3\n}"
        },
        "url": {
          "raw": "http://localhost:8002/api/v1/books/{{book_id}}/stock",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8002",
          "path": ["api", "v1", "books", "{{book_id}}", "stock"]
        }
      },
      "response": []
    }
  ]
}
